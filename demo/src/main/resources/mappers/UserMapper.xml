<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.data.source.change.mapper.UserMapper">

    <sql id="SelectColumnSql">
        id,
        name,
        age
    </sql>


    <insert id="add">
        insert into `user`
        (
        `name`,
        `age`
        )
        values
        (
        #{name},
        #{age}
        )
    </insert>

    <select id="listAll" resultType="com.data.source.change.entity.UserEntity">
        select
        <include refid="SelectColumnSql"/>
        from `user`
    </select>

    <select id="selectTest" resultType="java.lang.Integer">
        select sleep(#{ts})
    </select>

</mapper>